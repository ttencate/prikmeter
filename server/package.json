{
  "name": "prikmeter",
  "version": "1.0.0",
  "description": "Server to receive and process values from a Dutch Smart Meter (DSMR)",
  "main": "index.js",
  "scripts": {
    "run": "NODE_ENV=production node .",
    "run_watch": "NODE_ENV=development ./node_modules/.bin/supervisor --watch . --timestamp .",
    "test": "NODE_ENV=testing ./node_modules/.bin/mocha $(find . -name *.test.js -not -path './node_modules/*')",
    "test_watch": "NODE_ENV=testing ./node_modules/.bin/mocha -w $(find . -name *.test.js -not -path './node_modules/*')",
    "migrate": "./node_modules/.bin/knex migrate:latest",
    "standard": "./node_modules/.bin/standard",
    "standard_fix": "./node_modules/.bin/standard --fix"
  },
  "keywords": [
    "Smart  Metering"
  ],
  "author": "Thomas ten Cate",
  "repository": "https://github.com/ttencate/prikmeter",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "bcrypt-promise": "^2.0.0",
    "body-parser": "^1.18.2",
    "crc": "^3.5.0",
    "express": "^4.16.1",
    "express-nunjucks": "^2.2.3",
    "express-promise-router": "^2.0.0",
    "express-session": "^1.15.6",
    "express-validator": "^4.2.1",
    "knex": "^0.13.0",
    "make-promises-safe": "^1.1.0",
    "moment": "^2.19.1",
    "nunjucks": "^3.0.1",
    "pg": "^7.3.0",
    "promisify-node": "^0.4.0",
    "readline-sync": "^1.4.7",
    "winston": "^3.0.0-rc0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "knex-migrate": "^1.3.0",
    "mocha": "^4.0.1",
    "node-mocks-http": "^1.6.6",
    "sqlite3": "^3.1.13",
    "standard": "^10.0.3",
    "supervisor": "^0.12.0"
  }
}
